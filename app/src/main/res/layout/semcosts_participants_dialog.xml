<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/big_fragment_padding" >

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            style="@style/TitleDefault"
            android:text="@string/la_semcost_particips" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            style="@style/LabelDefault"
            android:text="@string/expl_semcost_particips" />

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" >

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" >

            <EditText
                    android:id="@+id/etCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="4dp"
                    android:inputType="number"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    android:text="6" />

            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_person"
                    android:tint="?android:textColor" />

        </LinearLayout>

        <ProgressBar
                android:id="@+id/prbBuilderLoad"
                android:layout_width="@dimen/progressbar_default_size"
                android:layout_height="@dimen/progressbar_default_size"
                android:layout_gravity="center"
                android:theme="@style/ProgressBarTheme" />

    </FrameLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/buCancel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_default_height"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                style="@style/CancelButton"
                android:text="@string/la_cancel" />

        <Button
                android:id="@+id/buSave"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_default_height"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                style="@style/ApplyButton"
                android:text="@string/la_save" />

    </LinearLayout>

</LinearLayout>