<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp" >

    <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            style="@style/InputDefault"
            android:text="01.01.1111" />

    <TextView
            android:id="@+id/tvParticips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            style="@style/InputDefault"
            android:text="@string/fs_semcost_particips" />

    <TextView
            android:id="@+id/tvCost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            style="@style/InputDefault"
            android:textStyle="bold"
            android:text="99 BYN" />

    <ImageView
            android:id="@+id/imgvDelete"
            android:layout_width="@dimen/edit_icon_default_size"
            android:layout_height="@dimen/edit_icon_default_size"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_delete"
            android:tint="@color/dangerPrimary" />

</LinearLayout>